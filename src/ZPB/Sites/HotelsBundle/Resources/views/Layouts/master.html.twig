{% set active_page = (active_page is defined) ? active_page : "" %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{% if block('title') %}{{ block('title')}}{% else %}Bienvenue{% endif %} | Les HÃ´tels de Beauval</title>
    {% if block('description') %}
        <meta name="description" content="{{ block('description') }}"/>
    {% endif %}
    {% if block('keywords') %}
        <meta name="keywords" content="{{ block('keywords') }}"/>
    {% endif %}

    {% block headLinks%}
        <link rel="stylesheet" href="/css/sites/leshotels/master.css"/>
        <link rel="stylesheet" href="/css/font-awesome.min.css"/>
    {% endblock %}

    {% block headScripts %}{% endblock %}

    {% block headStyles %}

    {% endblock %}
</head>
<body>
{% block topnav %}
    {{ render(controller("ZPBSitesCommonBundle:Navs:topnav", {url: path("zpb_sites_hotels_english_homepage")})) }}
{% endblock %}
{% block main %}
    {% block header %}

    {% endblock %}

    {% block content %}{% endblock %}

{% endblock %}

{% block footer %}{% endblock %}

{% block footScripts %}
    <script src="/js/vendor/jquery-2.1.1.min.js"></script>
    <script>
        $(function(){
            var topBarMenu, topBarMenuToggleBtn;
            topBarMenuToggleBtn = $("#main-top-bar-navs-toggler");
            topBarMenu = $("#toggle-menu");
            topBarMenuToggleBtn.on("click", function(e){
                e.preventDefault();
                if(topBarMenu.hasClass("toggle-menu-is-up")){
                    topBarMenu.removeClass("toggle-menu-is-up").addClass("toggle-menu-is-down");
                } else {
                    topBarMenu.removeClass("toggle-menu-is-down").addClass("toggle-menu-is-up");
                }
            })
        });
    </script>
{% endblock %}

</body>
</html>

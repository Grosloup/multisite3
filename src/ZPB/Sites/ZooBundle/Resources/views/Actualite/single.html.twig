{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{#{% block title %}{{ post.title }} | Actualités{% endblock %}#}
{% set prepend_title =  post.title %}


{% block content %}
    <div class="row">
        <div class="col-6">
            <h1>Actualités</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="post">
                <h4>{{ post.title }}</h4>
                <p><small>publié le: {{ post.publishedAt|date("d/m/y") }} à {{ post.publishedAt|date("H:i:s") }} dans {{ post.category }}</small></p>
                <div class="post-body">
                    {{ post.body|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% block title %}{{ post.title }} | Actualités{% endblock %}

{% block description %}{% endblock %}
{% block keywords %}{% endblock %}

{% set active_page = "single_post" %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="page-header">
                    <h1>Actualité</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <div class="row">
                    <div class="col-2 text-left"><a class="btn btn-primary btn-small" href="">&laquo; précédent</a></div>
                    <div class="col-2 text-center"><a class="btn btn-primary btn-small" href="{{ path("zpb_sites_zoo_actualites_homepage") }}">retour</a></div>
                    <div class="col-2 text-right"><a class="btn btn-primary btn-small" href="">suivant &raquo;</a></div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <div class="post single-post">

                    <h4>{{ post.title }}</h4>
                    <div class="post-thumbnail">
                        <div class="testbox testbox-4">4 columns * 200px</div>
                    </div>
                    <p><small>publié le: {{ post.publishedAt|date("d/m/y") }} à {{ post.publishedAt|date("H:i:s") }} dans {{ post.category }}</small></p>
                    <div class="post-body">
                        {{ post.body|raw }}
                    </div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>

    </div>


{% endblock %}

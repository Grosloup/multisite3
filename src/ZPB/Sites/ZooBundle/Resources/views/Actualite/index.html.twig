{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% block title %}Actualités{% endblock %}
{% block header %}
    {{ render(controller("ZPBSitesZooBundle:Partials:smallHeader")) }}
{% endblock %}

{% block content %}
    <div class="columns large-12">
        <h1>Actualités</h1>

        <div class="row">
            <div class="columns large-9">
                {% for post in posts %}
                    <div class="post">
                        <h4><a href="{{ path("zpb_sites_zoo_actualites_single", {slug: post.slug }) }}">{{ post.title }}</a></h4>
                        {% if post.illustration != null %}
                        <img src="{{ post.illustration.img.webPath }}" alt="" width="100%"/>
                        {% endif %}
                        <p><small>publié le: {{ post.publishedAt|date("d/m/y") }} à {{ post.publishedAt|date("H:i:s") }} dans {{ post.category }}</small></p>
                        <div class="post-body">
                            {{ post.excerpt|raw }}
                        </div>


                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}

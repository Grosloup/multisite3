{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% block title %}Actualités{% endblock %}

{% set active_page = "news" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="page-header">
                    <h1>Actualité</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="posts">
                    {% for post in posts %}
                        <div class="row">

                            <div class="col-6">
                                <div class="post">
                                    <div class="post-category"><a href="{{ path("zpb_sites_zoo_actualites_list_by_category", {slug: post.category.slug}) }}">{{ post.category }}</a></div>
                                    <a href="{{ path("zpb_sites_zoo_actualites_single", {slug: post.slug }) }}" class="post-title">{{ post.title }}</a>
                                    <div class="post-details">{{ post.publishedAt|date("d/m/y") }}</div>
                                    {% if post.hasIllustration == true %}
                                        <div class="post-thumbnail">
                                            <img src="{{ post.getWebIllustration() }}" alt=""/>
                                        </div>
                                    {% endif %}

                                    <div class="post-excerpt {% if post.hasIllustration == true %}post-has-thumbnail{% endif %}">
                                        {{ post.excerpt|raw }}
                                        <div class="post-more"><a href="{{ path("zpb_sites_zoo_actualites_single", {slug: post.slug }) }}">Lire plus...</a></div>
                                    </div>

                                    {% if post.tags|length > 0 %}
                                    <div class="post-tags">
                                        <ul>
                                            {% for tag in post.tags %}
                                            <li><a href="{{ path("zpb_sites_zoo_actualites_list_by_tag", {slug: tag.slug}) }}">{{ tag.name }}</a>{% if loop.last != true %}, {% endif %}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    {% endif %}

                                </div>
                            </div>

                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-2">
                {{ render(controller("ZPBSitesZooBundle:Actualite:listCategories")) }}
                {{ render(controller("ZPBSitesZooBundle:Actualite:listTags")) }}
            </div>
        </div>

    </div>
{% endblock %}

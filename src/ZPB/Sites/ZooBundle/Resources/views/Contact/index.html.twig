    </div>

    <div class="modal">
        <a class="modal-close-btn" href="">&times;</a>
        <div class="row">

            <div class="col-md-6">
                {{ form_start(form, {attr:{novalidate: true, class:"form"}}) }}
                {{ form_errors(form) }}
                <div class="form-row">
                    {{ form_label(form.interlocutor) }}
                    <div class="form-field">
                        {{ form_widget(form.interlocutor) }}
                        <div class="error-block">
                            {{ form_errors(form.interlocutor) }}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    {{ form_label(form.email) }}
                    <div class="form-field">
                        {{ form_widget(form.email) }}
                        <div class="error-block">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    {{ form_label(form.topic) }}
                    <div class="form-field">
                        {{ form_widget(form.topic) }}
                        <div class="error-block">
                            {{ form_errors(form.topic) }}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    {{ form_label(form.message) }}
                    <div class="form-field">
                        {{ form_widget(form.message) }}
                        <div class="error-block">
                            {{ form_errors(form.message) }}
                        </div>
                    </div>
                </div>
                <div class="form-row hide">
                    {{ form_label(form.name) }}
                    <div class="form-field">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="form-row">
                    {{ form_widget(form.save, {attr:{class:"btn btn-primary"}}) }}
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script src="/js/modal.js"></script>
    <script>
        $(function(){
            function selectInterloc(value){
                var options = $("#info_zoo_contact_form_interlocutor").find("option");
                options.attr("selected", false);
                options.each(function(){
                    if($(this).val() === value){
                        $(this).attr("selected", true);
                    }
                });
            }
            var $modal = $(".modal");
            $modal.zpbModal();
            var modal = $modal.data("zpbModal");
            $(".contact").on("click", function(e){
                e.preventDefault();
                selectInterloc($(this).data("id"));
                modal.open();
            })
        })
    </script>

{% endblock %}

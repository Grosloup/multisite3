{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% block title %}Parrainez un animal{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="page-header">
                    <h1>J'offre ce parrainage</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="spaced-row">
            <div class="col-md-4">
                {{ render(controller("ZPBSitesZooBundle:Parrainage/Index:connect")) }}
            </div>
            <div class="col-md-2">
                {{ render(controller("ZPBSitesZooBundle:Parrainage/Index:getBasket")) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="spaced-row">
            <div class="col-md-6">
                <h3 class="text-center">Rappel sur le parrainage</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aperiam architecto consectetur distinctio facere laboriosam magnam maxime molestias ratione recusandae sint?</p>
            </div>
        </div>
    </div>

    <div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">Les coordonnées du bénéficiaire</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h4>Le bénéficiaire a déjà un compte</h4>
            {{ form_start(emailForm, {attr: {novalidate: true, class:"form"}}) }}
            {{ form_errors(emailForm) }}
            <div class="form-row">
                {{ form_label(emailForm.email) }}
                <div class="form-field">
                    {{ form_widget(emailForm.email) }}
                    <div class="error-block">
                        {{ form_errors(emailForm.email) }}
                    </div>
                </div>
            </div>
            <div class="form-row">
                {{ form_label(emailForm.delayed) }}
                <div class="form-field">
                    {{ form_widget(emailForm.delayed) }}
                    <div class="error-block">
                        {{ form_errors(emailForm.delayed) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-field">
                    {{ form_widget(emailForm.search, {attr:{class: "btn btn-primary"}}) }}
                </div>
            </div>

            {{ form_end(emailForm) }}
        </div>
        <div class="col-md-3">
            <h4>Le bénéficiaire n'a pas de compte</h4>
            {{ form_start(form, {attr:{novalidate:true, class:"form"}}) }}
            {{ form_errors(form) }}
            <div class="form-row">
                {{ form_label(form.delayed) }}
                <div class="form-field">
                    {{ form_widget(form.delayed) }}
                    {{ form_errors(form.delayed) }}
                </div>
            </div>
            <div class="form-row">
                {{ form_label(form.civilite) }}
                <div class="form-field">
                    {{ form_widget(form.civilite) }}
                    {{ form_errors(form.civilite) }}
                </div>
            </div>
            <div class="form-row">
                {{ form_label(form.birthdate) }}
                <div class="form-field">
                    {{ form_widget(form.birthdate) }}
                    {{ form_errors(form.birthdate) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.firstname) }}
                <div class="form-field">
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.lastname) }}
                <div class="form-field">
                    {{ form_widget(form.lastname) }}
                    {{ form_errors(form.lastname) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.username) }}
                <div class="form-field">
                    {{ form_widget(form.username) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.email) }}
                <div class="form-field">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.phone) }}
                <div class="form-field">
                    {{ form_widget(form.phone) }}
                    {{ form_errors(form.phone) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.address) }}
                <div class="form-field">
                    {{ form_widget(form.address) }}
                    {{ form_errors(form.address) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.address2) }}
                <div class="form-field">
                    {{ form_widget(form.address2) }}
                    {{ form_errors(form.address2) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.batiment) }}
                <div class="form-field">
                    {{ form_widget(form.batiment) }}
                    {{ form_errors(form.batiment) }}
                </div>
            </div>
            <div class="form-row">
                {{ form_label(form.door) }}
                <div class="form-field">
                    {{ form_widget(form.door) }}
                    {{ form_errors(form.door) }}
                </div>
            </div>
            <div class="form-row">
                {{ form_label(form.floor) }}
                <div class="form-field">
                    {{ form_widget(form.floor) }}
                    {{ form_errors(form.floor) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.postalCode) }}
                <div class="form-field">
                    {{ form_widget(form.postalCode) }}
                    {{ form_errors(form.postalCode) }}
                </div>
            </div>
            <div class="form-row">
                {{ form_label(form.city) }}
                <div class="form-field">
                    {{ form_widget(form.city) }}
                    {{ form_errors(form.city) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_label(form.country) }}
                <div class="form-field">
                    {{ form_widget(form.country) }}
                    {{ form_errors(form.country) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-field">
                    {{ form_widget(form.save, {attr:{class: "btn btn-primary"}}) }}
                </div>
            </div>


            {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}
{% block footScripts%}
    {{ parent() }}
    <script src="/js/app.min.js"></script>
{% endblock %}

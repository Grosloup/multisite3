{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% block title %}Mon compte | Parrainez un animal{% endblock %}


{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="page-header">
                    <h1>Mon compte</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
    <div class="col-md-6">
        <dl class="_tabs-small " data-tabs="">
            <dd class="_tab  active" data-target="#tab_1">Mes parrainages</dd>
            <dd class="_tab" data-target="#tab_2">Mes informations</dd>
            <dd class="_tab" data-target="#tab_3">Modifier mon mot de passe</dd>
        </dl>
        <div class="_tabs-content">
            <div class="_tab-panel active" id="tab_1">
                <div class="columns large-6 large-centered">
                    <h3>Mes parrainages</h3>
                </div>
            </div>
            <div class="_tab-panel" id="tab_2">
                <div class="row">
                    <div class="columns large-6 large-centered">
                        <h3>Modifier mon compte</h3>

                        {{ form_start(form, {attr:{novalidate:true}}) }}
                        <div class="row">
                            <div class="column large-4">
                                {{ form_label(form.civilite) }}
                                {{ form_widget(form.civilite) }}
                                {{ form_errors(form.civilite) }}
                            </div>

                            <div class="column large-8">
                                {{ form_label(form.birthdate) }}
                                {{ form_widget(form.birthdate) }}
                                {{ form_errors(form.birthdate) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.firstname) }}
                                {{ form_widget(form.firstname) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.lastname) }}
                                {{ form_widget(form.lastname) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.phone) }}
                                {{ form_widget(form.phone) }}
                                {{ form_errors(form.phone) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                                {{ form_errors(form.address) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(form.address2) }}
                                {{ form_widget(form.address2) }}
                                {{ form_errors(form.address2) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-4">
                                {{ form_label(form.batiment) }}
                                {{ form_widget(form.batiment) }}
                                {{ form_errors(form.batiment) }}
                            </div>

                            <div class="column large-4">
                                {{ form_label(form.door) }}
                                {{ form_widget(form.door) }}
                                {{ form_errors(form.door) }}
                            </div>

                            <div class="column large-4">
                                {{ form_label(form.floor) }}
                                {{ form_widget(form.floor) }}
                                {{ form_errors(form.floor) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-4">
                                {{ form_label(form.postalCode) }}
                                {{ form_widget(form.postalCode) }}
                                {{ form_errors(form.postalCode) }}
                            </div>

                            <div class="column large-8">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                                {{ form_errors(form.city) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-4">
                                {{ form_label(form.country) }}
                                {{ form_widget(form.country) }}
                                {{ form_errors(form.country) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_widget(form.save, {attr:{class: "button"}}) }}
                            </div>
                        </div>


                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="_tab-panel" id="tab_3">
                <div class="row">
                    <div class="columns large-6 large-centered">
                        <h3>Modifier mon mot de passe</h3>

                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(pw_form.oldPassword) }}
                                {{ form_widget(pw_form.oldPassword) }}
                                {{ form_errors(pw_form.oldPassword) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(pw_form.newPassword.first) }}
                                {{ form_widget(pw_form.newPassword.first) }}
                                {{ form_errors(pw_form.newPassword.first) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="column large-12">
                                {{ form_label(pw_form.newPassword.second) }}
                                {{ form_widget(pw_form.newPassword.second) }}
                                {{ form_errors(pw_form.newPassword.second) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="column large-12">
                                {{ form_widget(pw_form.save, {attr:{class: "button"}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="_tab-panel" id="tab_4">

            </div>
        </div>

    </div>
</div>

{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script src="/js/tabs.min.js"></script>
    <script>
        $(function(){
            $("[data-tabs]").tabs();
        });
    </script>
{% endblock %}

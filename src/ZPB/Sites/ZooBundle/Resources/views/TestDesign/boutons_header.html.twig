<style>
    .tombeStone{
        width: 140px;
        height: 65px;
        background-color: transparent;
        position:absolute;
        bottom: 0;
        left: calc(50% - 90px);
        transition: all 0.15s;
        box-shadow: rgba(0,0,0,0.15) 0 -3px 5px inset;
        font-size: 14px;
        text-transform: uppercase;
        text-align: center;
        font-family: 'cooper_hewitt_bold', Arial, Helvetica, sans-serif;
    }

    .tombeStone.left{
        left: calc(50% - 220px);
    }

    .tombeStone.left .inner{
        background-color: #DDAB33;
        color: #fff;
    }

    .tombeStone.center{
        left: calc(50% - 70px);
    }

    .tombeStone.center .inner{
       background-color: #4f94b3;
    }

    .tombeStone.right {
        left: calc(50% + 80px);
    }


    .tombeStone.right .inner{
        background-color: #87a13e;
    }


    .tombeStone .inner{
        width: 140px;
        height: 140px;
        /*background-color: #e6e6e6;*/
        /*border-radius: 50%;*/
        box-shadow: rgba(0,0,0,0.3) 0 0 5px;

        padding: 15px 25px 0;
        text-align: center;
    }
    .tombeStone .inner a {
        color: #fff;
        font-family: inherit;
    }
    .tombeStone:hover{
        height: 120px;
        /*font-size: 16px;*/
    }
    .tombeStone:hover .inner a {
        color: #313133;
    }

    .tombeStone:hover .inner #svg_billet path,  .tombeStone:hover .inner #svg_dormir path, .tombeStone:hover .inner #svg_parrainez path, .tombeStone:hover .inner #svg_parrainez polygon, .tombeStone:hover .inner #svg_parrainez circle {
        fill: #313133;
    }

    #svg_billet, #svg_dormir, #svg_parrainez{
        margin-top: 10px;
    }
    #svg_billet path{
        fill: #fff;
    }
</style>



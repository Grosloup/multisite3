{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}PDF | Médiathèque{% endblock %}
{% set active = "list_media_pdf" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des pdfs
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#id</th>
                        <th>Fichier</th>
                        <th>Institution</th>
                        <th>Nbre de téléchargements</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.filename }}</td>
                            <td>{{ entity.institution }}</td>
                            <td>-</td>
                            <td><a class="btn btn-neutral" href="{{ path("zpb_admin_media_pdf_update", {id: entity.id}) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-neutra delete-alertl" href="{{ path("zpb_admin_media_pdf_delete", {id: entity.id, _token:csrf_token('delete_pdf')}) }}" data-name="{{ entity.filename }}"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Liste | Utilisateurs{% endblock %}
{% set active = "list_users" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des Administrateurs
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Pr√©nom</th>
                        <th>Nom</th>
                        <th>Email</th>

                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>

                            {% if "ROLE_SUPERADMIN" in user.roles %}
                                <td> - </td>
                                <td> - </td>
                            {% else %}
                                <td><a class="btn btn-neutral" href="#"><span class="i fa fa-edit"></span></a></td>
                                <td><a class="btn btn-neutral" href="#"><span class="i fa fa-trash-o"></span></a></td>
                            {% endif %}

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

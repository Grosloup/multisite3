{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Les catégories | Actualités{% endblock %}
{% set active = "list_post_cats" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des catégories d'actualité
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="tile">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th>#Id</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Articles</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category }}</td>
                        <td>{{ category.slug }}</td>
                        <td>todo</td>
                        <td><a href="{{ path("zpb_admin_posts_categories_update", {id: category.id}) }}" class="btn btn-neutral"><i class="fa fa-edit"></i></a></td>
                        <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_posts_categories_delete", {id: category.id, _token: csrf_token("post_category_delete")}) }}" data-name="{{ category }}"><i class="fa fa-trash-o"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Les FAQs{% endblock %}
{% set active = "list_faq" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des questions fréquentes
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Institution</th>
                        <th>Question</th>
                        <th>Réponse</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for faq in faqs %}
                        <tr>
                            <td>{{ faq.id }}</td>
                            <td>{{ faq.institution }}</td>
                            <td>{{ faq.question }}</td>
                            <td>{{ faq.response }}</td>
                            <td><a class="btn btn-neutral" href="{{ path("zpb_admin_faq_update", {id: faq.id}) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_faq_delete", {id: faq.id, _token: csrf_token("delete_faq")}) }}"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


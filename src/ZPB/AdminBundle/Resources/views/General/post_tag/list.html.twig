{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Les mots-clés | Actualités{% endblock %}
{% set active = "list_post_tags" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des mots-clés d'actualité
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Articles</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity }}</td>
                            <td>{{ entity.slug }}</td>
                            <td>todo</td>
                            <td><a href="{{ path("zpb_admin_posts_tags_update", {id: entity.id}) }}" class="btn btn-neutral"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_posts_tags_delete", {id: entity.id, _token: csrf_token("delete_post_tag")}) }}" data-name="{{ entity }}"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}

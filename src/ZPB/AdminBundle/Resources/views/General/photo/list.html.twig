{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Photothèque{% endblock %}
{% set active = "list_photos" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des photos
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Vignette</th>
                        <th>Fichier</th>
                        <th>Institution</th>
                        <th>Catégorie</th>
                        <th>Position</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for photo in photos %}
                    <tr>
                        <td>{{ photo.id }}</td>
                        <td><a href="#"><img src="{{ photo_factory.getWebThumb("small", photo) }}" alt="" width="50"/></a></td>
                        <td>{{ photo.filename }}</td>
                        <td>{{ photo.category.institution }}</td>
                        <td>{{ photo.category.name }}</td>
                        <td>{{ photo.position }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

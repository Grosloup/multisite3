{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Phototh√®que{% endblock %}
{% set active = "new_photo" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Choisir une institution
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <tbody>
                    {% for inst in institutions %}
                    <tr>
                        <td>{{ inst.name }}</td>
                        <td><a class="btn btn-neutral" href="{{ path("zpb_admin_photos_create", {institution_slug: inst.slug}) }}">Choisir</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Photothèque{% endblock %}
{% set active = "list_photos" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des photos de {{ institution }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-3">
            <div class="tile">
                <div class="tile-header">
                    Filtrer par catégorie
                </div>
                {{ form_start(filterCategory, {attr:{class: "form", novalidate:true, name: 'category_filter_form'}}) }}
                {{ form_errors(filterCategory) }}

                <div class="form-row">
                    <div class="form-field">
                        {{ form_widget(filterCategory.category) }}
                        {% if filterCategory.category.vars.errors|length>0 %}
                            <div class="errors-block">
                                {{ form_errors(filterCategory.category) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-row">
                    {{ form_widget(filterCategory.search, {attr: {class: "btn-flat btn-primary"}})}}
                </div>
                {{ form_end(filterCategory) }}
            </div>
        </div>

        <div class="column-9">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Vignette</th>
                        <th>Fichier</th>
                        <th>Institution</th>
                        <th>Catégorie</th>
                        <th>Position</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for photo in photos %}
                        <tr>
                            <td>{{ photo.id }}</td>
                            <td><a href="#"><img src="{{ photo.getWebThumbPath("small") }}" alt="" width="50"/></a></td>
                            <td>{{ photo.filename }}</td>
                            <td>{{ photo.category.institution }}</td>
                            <td>{{ photo.category.name }}</td>
                            <td>{{ photo.position }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Photothèque{% endblock %}
{% set active = "list_photos_cats" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des catégories de photo
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Institution</th>
                        <th>Description</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if categories|length<1 %}

                    {% else %}
                        {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>{{ category.institution }}</td>
                            <td><a href="" class="btn btn-neutral" data-action="open-popup" data-header="Description de {{ category.name }}" data-message="{{ category.description }}">lire</a></td>
                            <td><a class="btn btn-neutral" href="{{ path("zpb_admin_photos_categories_update", {id: category.id}) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_photos_categories_delete", {id: category.id, _token: csrf_token('delete_category')}) }}" data-name="{{ category }}"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

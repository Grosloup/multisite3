{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Institutions{% endblock %}
{% set active = "list_institutions" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Liste des institutions
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Domaine</th>
                        <th>Description</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if institutions|length<1 %}

                    {% else %}
                        {% for institution in institutions %}
                            <tr>
                                <td>{{ institution.id }}</td>
                                <td>{{ institution.name }}</td>
                                <td>{{ institution.host }}</td>
                                <td><a href="" class="btn btn-neutral" data-action="open-popup" data-header="Description de {{ institution.name }}" data-message="{{ institution.description }}">lire</a></td>
                                <td><a class="btn btn-neutral" href="{{ path("zpb_admin_institutions_update", {id: institution.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_institutions_delete", {id: institution.id, _token: csrf_token('delete_institution')}) }}" data-name="{{ institution }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

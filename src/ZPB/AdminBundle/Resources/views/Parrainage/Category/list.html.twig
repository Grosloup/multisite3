{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Toutes les catégories d'animaux | Parrainages{% endblock %}
{% set active = "sponsor_list_animal_cat" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Liste des catégories d'animaux à parrainer</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Editer</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cat in entities %}
                        <tr>
                            <td>{{ cat.id }}</td>
                            <td>{{ cat.name }}</td>
                            <td><a class="btn btn-neutral" href="{{ path("zpb_admin_sponsor_animals_categories_update", {id: cat.id}) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-neutral delete-alert" href="{{ path("zpb_admin_sponsor_animals_categories_delete", {id: cat.id, _token: csrf_token("delete_category")}) }}" data-name="{{ cat.name }}"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

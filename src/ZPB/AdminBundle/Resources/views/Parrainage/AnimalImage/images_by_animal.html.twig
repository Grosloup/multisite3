{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Toutes les images associées à {{ animal.longName }} | Parrainages{% endblock %}
{% set active = "sponsor_img_by_animal" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Toutes les images associées à {{ animal.longName }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Images HD (spéciales parrains)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-8">
            <div class="tile">
                {% if hds|length <1 %}
                    <p class="text-warning">Il n'y a pas d'images hd</p>
                {% else %}
                    {% for hd in hds %}

                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="column-4">
            <div class="tile">
                <div class="dropzone" id="hd-drop" data-id="{{ animal.id }}">
                    <div class="dropzone-in">
                        <div class="dropzone-legend"></div>
                    </div>
                    <div class="dropzone-loader">
                        <div class="dropzone-innerbar"></div>
                    </div>
                    <div class="dropzone-message"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Fonds d'écran (spéciales parrains)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-8">
            <div class="tile">
                {% if wallpapers|length <1 %}
                    <p class="text-warning">Il n'y a pas de fonds d'écran</p>
                {% else %}
                    <ul>
                        {% for wallpaper in wallpapers %}
                            <li><img src="{{ wallpaper.getWebPath() }}" alt=""/></li>
                        {% endfor %}
                    </ul>
                    
                {% endif %}
            </div>
        </div>
        <div class="column-4">
            <div class="tile">
                <div class="dropzone" id="wallpaper-drop" data-id="{{ animal.id }}">
                    <div class="dropzone-in">
                        <div class="dropzone-legend"></div>
                    </div>
                    <div class="dropzone-loader">
                        <div class="dropzone-innerbar"></div>
                    </div>
                    <div class="dropzone-message"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">
                    Images de présentation (front end)
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="column-8">
            <div class="tile">
                {% if fronts|length <1 %}
                    <p class="text-warning">Il n'y a pas d'images de présentation</p>
                {% else %}
                    {% for front in fronts %}

                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="column-4">
            <div class="tile">
                <div class="dropzone" id="front-drop" data-id="{{ animal.id }}">
                    <div class="dropzone-in">
                        <div class="dropzone-legend"></div>
                    </div>
                    <div class="dropzone-loader">
                        <div class="dropzone-innerbar"></div>
                    </div>
                    <div class="dropzone-message"></div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script src="/js/admin/animal-image-app.min.js"></script>
{% endblock %}

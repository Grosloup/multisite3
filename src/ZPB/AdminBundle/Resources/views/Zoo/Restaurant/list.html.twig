{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Liste des restaurants | ZooParc de Beauval{% endblock %}
{% set active = "list_restos" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Liste des restaurants</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Numéro sur le plan</th>

                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if entities|length < 1 %}
                        <tr class="warning"><td colspan="5">Il n'y a pas de restaurants enregistrés.</td></tr>
                    {% else %}
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.mapNum }}</td>


                                <td><a class="btn btn-neutral" href="{{ path("zpb_admin_zoo_restaurants_update", {id: entity.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a class="btn btn-neutral alert-delete" href="{{ path("zpb_admin_zoo_restaurants_delete", {id: entity.id, _token: csrf_token('delete_resto')}) }}" data-name="{{ entity.name }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

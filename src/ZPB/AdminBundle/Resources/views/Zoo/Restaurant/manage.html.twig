{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Gestion des restaurants | ZooParc de Beauval{% endblock %}
{% set active = "list_restos" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Gestion des restaurants</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Est ouvert</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if entities|length < 1 %}
                        <tr class="warning"><td colspan="5">Il n'y a pas de restaurants enregistrés.</td></tr>
                    {% else %}
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td><input type="checkbox" {% if entity.isOpen == true %}checked="checked"{% endif %}/> {% if entity.isOpen == true %}ouvert{% else %}fermé{% endif %}</td>



                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

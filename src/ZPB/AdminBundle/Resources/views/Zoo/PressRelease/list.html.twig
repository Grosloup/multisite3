{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Liste des communiqués de presse | ZooParc de Beauval{% endblock %}
{% set active = "list_com" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Liste des communiqués de presse</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Titre</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if entities|length < 1 %}
                        <tr class="warning"><td colspan="4">Il n'y a pas de communiqués de presse enregistrés.</td></tr>
                    {% else %}
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td><a class="btn btn-neutral" href="{{ path("zpb_admin_zoo_press_release_update", {id: entity.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a class="btn btn-neutral alert-delete" href="{{ path("zpb_admin_zoo_press_release_delete", {id: entity.id, _token: csrf_token('delete_press_release')}) }}" data-name="{{ entity.name }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

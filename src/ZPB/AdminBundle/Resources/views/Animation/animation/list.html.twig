{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %} Animations{% endblock %}
{% set active = "list_animations" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Liste des animations</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>N° sur plan</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% if animations|length < 1 %}
                            <tr class="warning"><td colspan="5">Il n'y a pas d'animations enregistrées.</td></tr>
                        {% else %}
                            {% for animation in animations %}
                                <tr>
                                    <td>{{ animation.id }}</td>
                                    <td>{{ animation.name }}</td>
                                    <td>{{ animation.placeNum }}</td>
                                    <td><a class="btn btn-neutral" href="{{ path("zpb_admin_animations_update") }}"><i class="fa fa-edit"></i></a></td>
                                    <td><a class="btn btn-neutral alert-delete" href="{{ path("zpb_admin_animations_delete", {id: animation.id, _token: csrf_token('delete_animation')}) }}" data-name="{{ animation.name }}"><i class="fa fa-trash-0"></i></a></td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

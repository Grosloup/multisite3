{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Journées | Animations{% endblock %}
{% set active = "list_animations_days" %}

{% block content %}
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <div class="tile-header">Liste des journées d'animations</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column-12">
            <div class="tile">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nom</th>
                        <th>Couleur</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if animDays|length < 1 %}
                        <tr class="warning"><td colspan="5">Il n'y a pas de journées d'animations enregistrées.</td></tr>
                    {% else %}
                        {% for animDay in animDays %}
                            <tr>
                                <td>{{ animDay.id }}</td>
                                <td>{{ animDay.name }}</td>
                                <td>{{ animDay.color }}</td> {# TODO #}
                                <td><a class="btn btn-neutral" href="{{ path("zpb_admin_animations_days_update", {id: animDay.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a class="btn btn-neutral alert-delete" href="{{ path("zpb_admin_animations_days_delete", {id: animDay.id, _token: csrf_token('delete_animation')}) }}" data-name="{{ animDay.name }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
